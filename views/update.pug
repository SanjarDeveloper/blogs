extends layout.pug 

block content 
    div.container
        h1 Update Blog
    if error
            p.error Some Error occured! Try again! 
    if success 
            p.success Blog is updated!
    div.form
        form(action = `/blogs/update/${blog.id}` method="POST")
            label Title:
            input(
                type='text'
                name='title'
                value = `${blog.title}`
            )    
            label Description:
            input(
                type='text'
                name='description'
                value = `${blog.description}`
            ) 
            button.btn-form Update Blog